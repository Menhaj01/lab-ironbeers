<div class="container">
    <div class="beersunit">
        {{#each data}}
        <div align="center"><img class="random-img" alt="{{name}}" src="{{image_url}}" /></div>
        <div class="info">
            <h2>{{name}}</h2>
            <h5 class="tagline">{{tagline}}</h5>
            <p class="descript">{{description}}</p>
            <h4>Food Pairing</h4>
            <ul>
                {{#each this.food_pairing}}
                <li>{{this}}</li>
                {{/each}}
            </ul>
            <p><b>Brewes Tips:</b> {{brewers_tips}}</p>
        </div>
        {{/each}}
    </div>
</div>